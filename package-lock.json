{
  "name": "TimeTable Generator",
  "lockfileVersion": 3,
  "requires": true,
  "packages": {}
}

// filepath: .github/workflows/ci.yml
name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install & build (if Node project)
        run: |
          if [ -f package.json ]; then
            npm ci
            if npm run | grep -q ' build'; then
              npm run build
            fi
            if npm test --silent; then
              echo "tests passed"
            fi
          else
            echo "No package.json â€” skipping npm steps"
          fi
